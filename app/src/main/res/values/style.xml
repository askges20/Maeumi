<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:backgroundTint">@color/lightgreen</item>
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">18sp</item>   <!-- 버튼 텍스트 사이즈 지정, 메세지 텍스트 크기는 java 파일에서 지정해줘야함 -->
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="android:textAppearanceSmall">@font/custom_font_family</item>
        <item name="android:textAppearanceMedium">@font/custom_font_family</item>
        <item name="android:textAppearanceLarge">@font/custom_font_family</item>
        <item name="android:windowBackground">@drawable/alert_white_border</item>   <!-- 모서리 둥글게 -->
    </style>

    <!-- 팝업 (적용 안됨) -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/pinkred</item>
        <item name="android:textColor">@color/pinkred</item>
    </style>
    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/pinkred</item>
    </style>
    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/pinkred</item>
    </style>

    <!-- 탭 레이아웃 -->
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>
</resources>