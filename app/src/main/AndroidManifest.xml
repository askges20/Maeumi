<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hanium.android.maeumi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Maeumi"
        android:screenOrientation="portrait">

        <!-- 로딩 화면 -->
        <activity android:name=".Activity_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인 화면 -->
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".Diary"></activity>
        <activity android:name=".SelfTest"></activity>
        <activity android:name=".ChatBot"></activity>
        <activity android:name=".Board"></activity>
        <activity android:name="profile.Profile"></activity>
        <activity android:name=".DiaryContent"></activity>

    </application>

</manifest>